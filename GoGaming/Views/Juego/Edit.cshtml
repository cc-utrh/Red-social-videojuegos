@model GoGaming.Models.JuegoViewModel

@{
    ViewBag.Title = "Editar Juego";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Juego</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="card w-50 jumbotron" style="background-color: #222222; margin-top: 3em;">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="margin-bottom: 10px;">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="margin-bottom: 10px;">
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Portada, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="margin-bottom: 10px;">
            @Html.EditorFor(model => model.Portada, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Portada, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Generos, htmlAttributes: new { @class = "control-label col-md-2" })
        @{ var nombres = (string[])ViewData["nombresGenero"];}
        @for (var i = 0; i < (int)ViewData["numGeneros"]; i++)
        {
            <div class="col-md-10, form-horizontal" align="left" style=" margin-left:180px">
                @Html.CheckBoxFor(model => model.Generos[i], new { @value = true }) @nombres[i]
            </div>

        }
    </div>

    <div class="form-group">
        <div class="text-right" >
            <input type="submit" style="margin-top: 20px;" value="Guardar" class="btn btn-primary stretched-link" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Atrás", "Index")
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
